{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard-with-typescript",
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": ["./tsconfig.json"]
    },
    "plugins": [
        "react",
        "react-hooks", 
        "@typescript-eslint", 
        "prettier"
    ],
    "rules": {
        "import/no-unresolved": "error"
    },
    "settings": {
        "import/resolver": {
            "typescript": {}
        }
    }
}
